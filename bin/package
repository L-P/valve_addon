#!/usr/bin/env sh

set -eux

case "$1" in
    dm_solvent)
        rm -f "dm_solvent.zip" || true
        zip \
            "dm_solvent.zip" \
            "maps/dm_solvent.res" \
            "maps/dm_solvent.readme.txt" \
            "maps/dm_solvent.bsp" \
            "mapssrc/dm_solvent.map" \
            gfx/env/solvent*.tga \
            sound/ambience/dm_solvent.wav \
            sprites/dm_solvent/glow_wide_oriented.spr
        ;;
    *)
        exit 2
esac
